extends ../template

block variables
    - var title = 'Добро пожаловать'

block content
    .preloader#preloader
        .spinner
            svg.spinner__image(xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
            width="80.586px" height="80.73px" viewBox="0 0 48.586 75.73" enable-background="new 0 0 52.586 63.73" xml:space="preserve")
                text#text(transform="matrix(1 0 0 1 5.772 45.0889)" font-family="'ArialMT'" font-size="24" ) 0
                circle#inner(fill="none" stroke="#000000" stroke-width="2.5864" stroke-miterlimit="10" cx="26.293" cy="37.438" r="25" transform="rotate(-90 25 38)")
                circle#outer(cx="26.293" cy="4.5" r="4.5")
    div.wrapper
        section.section.intro#hero
                video.video(autoplay loop muted)
                    source.video__source(src="assets/images/video/night.mp4" type="video/mp4")
                .parallax#parallax
                    .parallax__layer
                        img.parallax__image.parallax__image_about(src="assets/images/png/Layer 1.png")
                header.intro__header
                    a.btn.btn_autorization#btn_autorization(href="")
                        span.btn__text Авторизоваться
                main.main
                    .main__flip-container#flip-container
                        div.user-preview
                            div.user-preview__image
                                img.user-preview__picture(src="assets/images/jpg/photo1.jpg")
                            h2.user-preview__title Дмитрий Писарев
                            span.user-preview__text Личный сайт разработчика
                            include ../common/social
                            ul.main__nav
                                li.main__nav-item
                                    a.main__nav-link(href="my-works") Мои работы
                                li.main__nav-item
                                    a.main__nav-link(href="about") Обо мне
                                li.main__nav-item
                                    a.main__nav-link(href="blog") Блог
                        div.autherization.form-container
                            h2.autherization__title авторизуйтесь
                            form.form.autherization__form(action="/login" method="POST")
                                div.form__row
                                    label.form__label.form__label_text(for ="name")
                                        svg.form__image
                                            use(xlink:href="assets/images/svg/sprite.svg#login")
                                    input.form__input(type="text" name="name" id="name" placeholder="Логин" required)
                                div.form__row
                                    label.form__label.form__label_text(for ="password")
                                        svg.form__image
                                            use(xlink:href="assets/images/svg/sprite.svg#password")
                                    input.form__input(type="password" name="password" id="password" placeholder="Пароль" required)
                                div.form__row
                                    input.form__input(type="checkbox" name="chekbox" id="checkbox" value =1)
                                    label.form__label.form__label_type_check(for ="checkbox") Я человек
                                div.form__row.form__row_radio
                                    div.form__radio_title Вы точно не робот?
                                    div.form__column
                                        input.form__input(type="radio" name="radio" id="yes" value=1)
                                        label.form__label.form__label_type_radio(for ="yes") Да
                                    div.form__column
                                        input.form__input(type="radio" name="radio" id="no" value= 2)
                                        label.form__label.form__label_type_radio(for ="no") Не уверен
                                if(msg)
                                    .autherization__message= msg
                                div.form__row.form__row_buttons.form__row_auth
                                    a.form__link(href="my-works") Мои работы
                                    input.form__submit(type='submit' name="submit" value="Войти")


                footer.intro__footer
                    include ../common/signature

