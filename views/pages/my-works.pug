extends ../template

block variables
    - var title = 'Мои работы'


block content
    div.wrapper
        section.hero#hero

                .parallax#parallax
                    .parallax__layer
                        img.parallax__image.parallax__image_about(src="assets/images/png/Layer 1.png")
                div.hero__top-line
                    include ../common/social
                    a.hamburger-menu#hamburger-menu(href="#")
                        div.hamburger-menu-bars
                div.hero__content
                    span.bg.bg_intro
                        svg.bg__image.bg__image_intro
                            use(xlink:href="assets/images/svg/sprite.svg#stars1")
                    div.hero__image
                    span.hero__title.white Писарев Дмитрий
                    span.main-text.white Личный сайт веб-разработчика
                a.scroll.scroll__down
                    svg.scroll__image
                        use(xlink:href="assets/images/svg/sprite.svg#portf_arrow_down")
                svg.hero__bg.hero__bg_works
                    use(xlink:href="assets/images/svg/sprite.svg#bg")
                .hero__title_works.title.white Мои работы
                    span.bg.bg_works
                        svg.bg__image
                            use(xlink:href="assets/images/svg/sprite.svg#stars2")

        section.section.slider
                .slider__decription
                    .slider__title= slides[0].title
                    .slider__tech.accent= slides[0].tech
                    .slider__link
                        a.btn.btn_link(href= src)
                            span.btn__text Посмотреть сайт
                .slider__head
                    .slider__image_big
                        img.slider__picture(src= slides[0].file.path.slice(7))
                .slider__slide
                    a.scroll.scroll__slider.scroll__slider_next
                        svg.scroll__image.scroll__image_slider
                            use(xlink:href="assets/images/svg/sprite.svg#portf_arrow_down")
                    a.scroll.scroll__slider.scroll__slider_prev
                        svg.scroll__image.scroll__image_slider
                            use(xlink:href="assets/images/svg/sprite.svg#portf_arrow_up")
                    ul.slider__slide_next.slider-list
                        if (slides)
                            each index in slides
                                li.slider-list__item
                                    .slider__image_small
                                        img.slider__picture(src= index.file.path.slice(7) data-title= index.title data-tech= slides[0].tech data-link ="http://cd35590.tmweb.ru/")


                    ul.slider__slide_prev.slider-list
                        if (slides)
                            each index in slides
                                li.slider-list__item
                                    .slider__image_small
                                        img.slider__picture(src= index.file.path.slice(7) data-title= index.title data-tech= slides[0].tech data-link ="http://cd35590.tmweb.ru/")




        section.reviews
            .reviews__title.title.white Что обо мне говорят
               span.bg.bg_review
                    svg.bg__image
                        use(xlink:href="assets/images/svg/sprite.svg#stars3")
            ul.reviewers
                li.reviewer
                    .reviewer__image
                        img.reviewer__picture.reviewer__picture_big(src="assets/images/jpg/reviewer1.jpg")
                    .reviewer__text Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжелых испытаний и бессонных ночей!
                    .reviewer__signature
                        span.reviewer__name Ковальчук Дмитрий
                        span — основатель Loftschool

                li.reviewer
                    .reviewer__image
                        img.reviewer__picture(src="assets/images/jpg/reviewer2.jpg")
                    .reviewer__text Этот код выдержит любые испытания. Только пожалуйста, не загружается сайт на слишком старых браузерах!
                    .reviewer__signature
                        span.reviewer__name Сабанцев Владимир
                        span — преподаватель
            .form-container.form-container_feedback
                h2.sub-title.white.line Связаться со мной
                form.form.feedback(action="/contacts" method="POST"
                    enctype="application/x-www-form-urlencoded")
                    div.form__row
                        input.form__input.form__input_feedback.main-text(type="text" name="name"  placeholder="Ваше имя" required)
                    div.form__row
                        input.form__input.form__input_feedback.main-text(type="email" name="email"  placeholder="Ваш email" required)
                    div.form__row
                       textarea.form__textarea.main-text(name="text" placeholder="Ваше сообщение" required)
                    .feedback__status
                    div.form__row.form__row_buttons
                        input.form__submit.form__submit_feedback(type='submit' name="submit" value="Отправить")
                        input.form__reset.form__reset_feedback(type='reset' name="submit" value="Очистить")
            .scroll.scroll__up
                svg.scroll__image
                    use(xlink:href="assets/images/svg/sprite.svg#portf_arrow_up")

            footer.footer.footer_absolute

                div.footer__column
                    span.main-text.white Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool.
                div.footer__column
                    nav.navigation#navigation
                        ul.navigation__list
                            li.navigation__item
                                a.navigation__link.navigation__link_current(href="my-works")
                                    span.navigation__text Мои работы
                            li.navigation__item
                                a.navigation__link(href="about")
                                    span.navigation__text Обо мне
                            li.navigation__item
                                a.navigation__link(href="blog")
                                    span.navigation__text Блог
                            li.navigation__item
                                a.navigation__link(href="/")
                                    span.navigation__text Авторизация
                    ul.social
                            li.social__item
                                a.social__link(href="#")
                                    svg.social__image.social__image_grey.social__image_mobile
                                        use(xlink:href="assets/images/svg/sprite.svg#vk")
                            li.social__item
                                a.social__link(href="#")
                                    svg.social__image.social__image_grey.social__image_mobile
                                        use(xlink:href="assets/images/svg/sprite.svg#github")
                            li.social__item
                                a.social__link(href="#")
                                    svg.social__image.social__image_grey.social__image_mobile
                                        use(xlink:href="assets/images/svg/sprite.svg#in")


                div.footer__column
                        span.main-text.white Skype: +79060761095
                        span.main-text.white pisarev_dmitry@mail.ru
                        span.main-text.white +7 906 076 10 95
                        span.main-text.white г.Москва
                div.footer__signature
                    include ../common/signature